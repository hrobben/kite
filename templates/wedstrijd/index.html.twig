{% extends 'base.html.twig' %}

{% block title %}Wedstrijd index{% endblock %}

{% block body %}
    <h1>Wedstrijd index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Datumtijd</th>
                <th>Categorie</th>
                <th>Omschrijving</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for wedstrijd in wedstrijds %}
            <tr>
                <td>{{ wedstrijd.id }}</td>
                <td>{{ wedstrijd.datumtijd | date('d-m-Y H:i') }}</td>
                <td>{{ wedstrijd.categorieId }}</td>
                <td>{{ wedstrijd.omschrijving }}</td>
                <td>
                    <a href="{{ path('wedstrijd_show', {'id': wedstrijd.id}) }}">show</a>
                    <a href="{{ path('wedstrijd_edit', {'id': wedstrijd.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('wedstrijd_new') }}">Create new</a>
{% endblock %}
