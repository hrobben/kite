{% extends 'base.html.twig' %}

{% block title %}Deelnemer index{% endblock %}

{% block body %}
    <h1>Deelnemer index</h1>

    <table class="table" id="lijst">
        <thead>
            <tr>
                <th>Id</th>
                <th>First_name</th>
                <th>Insertion_name</th>
                <th>Last_name</th>
                <th>Verzekering</th>
                <th>Mobile_nr</th>
                <th>Categorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for deelnemer in deelnemers %}
            <tr>
                <td>{{ deelnemer.id }}</td>
                <td>{{ deelnemer.firstName }}</td>
                <td>{{ deelnemer.insertionName }}</td>
                <td>{{ deelnemer.lastName }}</td>
                <td>{{ deelnemer.verzekering ? 'Yes' : 'No' }}</td>
                <td>{{ deelnemer.mobileNr }}</td>
                <td>{{ deelnemer.categorieid }}</td>
                <td>
                    <a href="{{ path('deelnemer_show', {'id': deelnemer.id}) }}">show</a>
                    <a href="{{ path('deelnemer_edit', {'id': deelnemer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('deelnemer_new') }}">Create new</a>

    <h1>Categories</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Cat Id</th>
                <th>Omschrijving</th>
                <th>Count</th>
            </tr>
        </thead>
        <tbody>
        {%  set teller = 0 %}
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id}}</td>
                <td>{{ categorie.omschrijving }}</td>
                <td>{{ counts[teller] }}</td>
            </tr>
            {% set teller = teller + 1 %}
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

