<body>

<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <h5 class="my-0 mr-md-auto font-weight-normal">MBO Rijnland</h5>
    <nav class="my-2 my-md-0 mr-md-3">
        <a class="p-2 text-dark" href="/">Home</a>
        {% if is_granted("ROLE_USER") %}
            <a class="p-2 text-dark" href="{{ path('categorie_index') }}">CategorieÃ«n</a>
        {% endif %}
        {% if is_granted("ROLE_ADMIN") %}
            <a class="p-2 text-dark" href="{{ path('wedstrijd_index') }}">Wedstrijden</a>
            <a class="p-2 text-dark" href="{{ path('deelnemer_index') }}">Deelnemers</a>
        {% endif %}

    </nav>
    {% if app.user %}
        <a class="btn btn-outline-primary" href="/logout">Sign out {{ app.user }}</a>
    {% else %}
        <a class="btn btn-outline-primary" href="/login">Sign in</a>
    {% endif %}
</div>

